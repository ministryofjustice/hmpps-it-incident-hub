{% extends "../partials/layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageHeaderTitle = "Raise an Incident" %}
{% set pageTitle = applicationName + " - " + pageHeaderTitle %}

{% set backLinkHref = "/incident/type" %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">{{ pageHeaderTitle }}</h1>

    <form action="/incident/category" method="POST" novalidate>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      {{ govukRadios({
        idPrefix: "category",
        name: "category",
        fieldset: {
          legend: {
            text: "What category would your access issue relate to?",
            isPageHeading: false,
            classes: "govuk-fieldset__legend--l"
          }
        },
        hint: {
          text: "Let us know how"
        }
        items: [
          {
            value: "access-denied",
            text: "Access denied",
            hint: {
              text: "Are you having issues accessing the elements of the service?"
            }
          },
          {
            value: "account-locked",
            text: "Account locked",
            hint: {
              text: "Has your account been locked?"
            }
          },
          {
            value: "access-issue",
            text: "I am raising an access issue",
            hint: {
              text: "Are you having issues accessing parts of the service?"
            }
          },
          {
            value: "security-issue",
            text: "I am raising a security Issue",
            hint: {
              text: "Has there been a security breach within your service?"
            }
          }
        ]
      }) })

      {{ govukButton({
        text: "Continue"
      }) }}
    </form>
  </div>
</div>

{% endblock %}
